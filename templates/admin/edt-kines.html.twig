{% extends 'base.html.twig' %}

{% block title %}KineLib ADMIN - Liste des EDT des kin√©s{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/main.css') }}">
{% endblock %}

{% block body %}
    {% include 'assets/navbar.html.twig' %}

    <div class="main_wrapper">
        <div class="accordion" id="accordionKines">
            {% for idKine, infos in edts %}
                <div class="accordion-item">
                    <h2 class="accordion-header" id="heading{{ idKine }}">
                        <button class="accordion-button collapsed"
                                type="button"
                                data-bs-toggle="collapse"
                                data-bs-target="#collapse{{ idKine }}"
                                aria-expanded="false"
                                aria-controls="collapse{{ idKine }}">
                            Dr. {{ infos.nom|upper }} {{ infos.prenom|capitalize }} -&nbsp;<span class="text-muted">{{ infos.email }}</span>
                        </button>
                    </h2>
                    <div id="collapse{{ idKine }}"
                         class="accordion-collapse collapse"
                         aria-labelledby="heading{{ idKine }}"
                         data-bs-parent="#accordionKines">
                        <div class="accordion-body">
                            <ul class="list-group">
                                {% for jour, content in infos.edt %}
                                <li class="list-group-item">
                                    <p>{{ content.nom }}</p>
                                    <ul class="list-group">
                                    {% for nomPeriode, heures in content.periode %}
                                        <li class="list-group-item">
                                            <p>{{ nomPeriode }}</p>
                                            <ul class="list-group">
                                                <li class="list-group-item">{{ heures.heureDebut }}</li>
                                                <li class="list-group-item">{{ heures.heureFin }}</li>
                                            </ul>
                                        </li>
                                    {% endfor %}
                                    </ul>
                                </li>
                                {% endfor %}
                            </ul>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}